pipeline {
    agent any
stages {
        stage('Run Python Script') {
            steps {
                script {
		    def stringParam = params.File
			echo "String parameter: ${stringParam}"
		    
		    sh "sudo cp ${stringParam} /var/lib/jenkins/workspace/"
		    


                    def command = "python3 Itay_project.py -r s3 --action ${ACTION}"
                    if (action == 'create') {
                        if ("${Public}" == 'Yes') {
			    command += " --name ${Name} --public true"
			} else if ("${Public}" == 'No') {
			    command += " --name ${Name} --public false"
                    }} else if (action == 'upload') {
			command += " --name ${Name} --file var/lib/jenkins/workspace${stringParam}"
		    }
                    sh command
                }
            }
        }
    }

    post {
        always {
            echo 'Pipeline finished.'
            // Perform any cleanup tasks here if needed
        }
    }
}
