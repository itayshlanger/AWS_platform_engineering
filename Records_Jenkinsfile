pipeline {
    agent any
stages {
        stage('Run Python Script') {
            steps {
                script {
		                def Name = params.Name
                    def value = params.Value
                    def id = params.HostedZone-ID
                    def command = "sudo -u ubuntu python3 Itay_project.py -r route53"
                    if (action == 'Create Record') {
			command += " -a record --create ${id} -- name ${Name} --value ${value} --TTL ${TTL} --Rtype ${Record Type}"
  	            } else if (action == 'Update Record') {
			command += " -a record --update ${id} --name ${Name} --value ${value} --TTL ${TTL} --Rtype ${Record Type}"
                    } else if (action == 'Delete Record') {
                        command += " -a record --delete ${id} --name ${Name} --Rtype ${Record Type}"
		                    }
                    sh command
                }
            }
        }
    }

    post {
        always {
            echo 'Pipeline finished.'
            // Perform any cleanup tasks here if needed
        }
    }
}
